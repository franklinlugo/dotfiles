{
  // Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and 
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "breakpoint mixin": {
    "prefix": "ibp",
    "body": [
      "@include breakpoint($1) {$2}"
    ],
    "description": "breakpoint mixin"
  },
  "border red": {
    "prefix": "br",
    "body": "border: 1px solid red;",
    "description": "border red"
  },
  "border blue": {
    "prefix": "bb",
    "body": "border: 1px solid blue;",
    "description": "border blue"
  },
  "border green": {
    "prefix": "bg",
    "body": "border: 1px solid green;",
    "description": "border green"
  },
  "import todopago scss vars":{
    "prefix": "iv",
    "body": "@import 'assets/scss/variables.scss';",
    "description":"import todopago scss vars"
  }
}